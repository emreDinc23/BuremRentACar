@model IEnumerable<Rentacarproject.Dto.AboutDtos.ResultAboutDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int Index = 1;
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Hakkımda Listesi</h4>
                <p class="card-subtitle mb-4">
                    Ana Sayfa Hakkımda kısmındaki bilgileri bu kısımdan inceleyip ekleme ve silme işlemleri yapabilirsiniz.
                </p>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.AboutID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ImageUrl)
                            </th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Index
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ImageUrl)
                                </td>
                                <td>
                                    <a href="@Url.Action("Update", "About", new { area = "Admin", id = item.AboutID })" class="btn btn-outline-secondary waves-effect waves-light">Edit</a>
                                </td>
                                <td>
                                    <a href="@Url.Action("Delete", "About", new { area = "Admin", id = item.AboutID })" class="btn btn-outline-danger waves-effect waves-light">Sil</a>
                                </td>
                            </tr>
                            Index++;
                        }
                    </tbody>
                </table>      <a href="@Url.Action("Create", "About", new { area = "Admin" })" class="btn btn-primary waves-effect waves-light">Yeni About Ekle</a>

            </div> <!-- end card body-->
        </div> <!-- end card -->
    </div><!-- end col-->
</div>
