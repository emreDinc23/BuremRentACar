@model List<Rentacarproject.Dto.CategoryDtos.ResultCategoryDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int Index = 1;
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Blog Kategori Listesi</h4>
                <p class="card-subtitle mb-4">
                    Blogların kategorilerini bu kısımdan inceleyip ekleme ve silme işlemleri yapabilirsiniz.
                </p>
                <table class="table">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Kategori Adı</th>
                        <th>İşlemler</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Index</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                <a href="@Url.Action("Update", "Category", new { area = "Admin", id = item.Id})" class="btn btn-outline btn-sm btn-warning">Güncelle</a>
                                <a href="@Url.Action("Delete", "Category", new { area = "Admin", id = item.Id })" class="btn btn-outline btn-sm btn-danger">Sil</a>
                               
                            </td>
                        </tr>
                        Index++;
                    }
                    </tbody>
                </table>
                <a href="@Url.Action("Create", "Category", new { area = "Admin" })" class="btn btn-primary mt-3">Yeni Araç Ekle</a>
            </div> <!-- end card body-->
        </div> <!-- end card -->
    </div><!-- end col-->
</div>