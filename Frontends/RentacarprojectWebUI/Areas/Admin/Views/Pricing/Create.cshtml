@model Rentacarproject.Dto.PricingDtos.CreatePricingDto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
<div class="container-fluid">
<div class="row">
<div class="col-xl-12">
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Yeni Araç Özelliği Girişi</h4>
        <p class="card-subtitle mb-4">Araç özellikleri ile ilgili temel bilgileri eksiksiz doldurmanız önemlidir. Veri girişlerinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary waves-effect waves-light">Arac Özelliği Kaydet</button>
        </form>

    </div> <!-- end card-body-->
</div>

</div>
<!-- end card-body-->
</div>
<!-- end card -->

</div>
<!-- end col -->

</div>
