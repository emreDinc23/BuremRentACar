@model IEnumerable<Rentacarproject.Dto.ServiceDtos.ResultServiceDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int Index = 1;
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Hizmetler Listesi</h4>
                <p class="card-subtitle mb-4">
                    Arabaların bluetooth koltuk ısıtma vb. özelliklerini bu kısımdan inceleyip ekleme ve silme işlemleri yapabilirsiniz.
                </p>
                <table id="datatable-buttons" class="table table-striped dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ServiceId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IconUrl)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Index
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IconUrl)
                                </td>
                                <td>
                                    <a href="@Url.Action("Update", "Service", new { area = "Admin", id = item.ServiceId})" class="btn btn-sm btn-warning">Güncelle</a>
                                    <a href="@Url.Action("Delete", "Service", new { area = "Admin", id = item.ServiceId })" class="btn btn-sm btn-danger">Sil</a>
                                </td>
                            </tr>
                            Index++;
                        }
                    </tbody>
                </table>
                <a href="@Url.Action("Create", "Service", new { area = "Admin" })" class="btn btn-primary mt-3">Yeni Hizmet Ekle</a>

            </div> <!-- end card body-->
        </div> <!-- end card -->
    </div><!-- end col-->
</div>
