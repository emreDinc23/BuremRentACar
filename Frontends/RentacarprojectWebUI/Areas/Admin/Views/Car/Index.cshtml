@using Rentacarproject.Dto.CarDtos
@model List<ResultCarWithBrandDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<style>
    .car-image {
        width: 100px; /* Görsel genişliği */
        height: auto; /* Yüksekliği otomatik ayarla */
        border-radius: 8px; /* Köşeleri yuvarlat */
        border: 1px solid #ddd; /* Hafif kenarlık */
        padding: 5px; /* Kenarlık ile görsel arasında boşluk */
        background-color: #f8f9fa; /* Arkaplan rengi */
    }
</style>

<link href="~/Admin/plugins/datatables/dataTables.bootstrap4.css" rel="stylesheet" type="text/css" />
<link href="~/Admin/plugins/datatables/responsive.bootstrap4.css" rel="stylesheet" type="text/css" />
<link href="~/Admin/plugins/datatables/buttons.bootstrap4.css" rel="stylesheet" type="text/css" />
<link href="~/Admin/plugins/datatables/select.bootstrap4.css" rel="stylesheet" type="text/css" />

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Araba Listesi</h4>
                <p class="card-subtitle mb-4">
                    The Buttons extension for DataTables provides a common set of options, API methods and styling to display buttons on a page
                    that will interact with a DataTable. The core library provides the based framework upon which plug-ins can built.
                </p>

                <table id="datatable-buttons" class="table table-striped dt-responsive nowrap">
                    <thead>
                    <tr>
                       
                        <th>Id</th>
                        <th>Marka</th>
                        <th>Model</th>
                        <th>Yakıt Türü</th>
                        <th>Vites Türü</th>
                        <th>Kilometre</th>
                        <th>Bagaj</th>
                        <th>Koltuk</th>
                        <th>İşlemler</th>
                        <th>Image</th>
                    </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                
                              
                                <td>@item.carID</td>
                                <td>@item.brandName</td>
                                <td>@item.model</td>
                                <td>@item.fuel</td>
                                <td>@item.transmission</td>
                                <td>@item.km</td>
                                <td>@item.luggage</td>
                                <td>@item.seat</td>
                                <td>
                                    <a href="@Url.Action("Update", "Car", new { area = "Admin", id = item.carID })" class="btn btn-outline-secondary waves-effect waves-light">Güncelle</a>
                                    <a href="@Url.Action("Detail", "Car", new { area = "Admin", id = item.carID })" class="btn btn-outline-success waves-effect waves-light">Sitede Gör</a>
                                    <a href="@Url.Action("Detail", "Car", new { area = "Admin", id = item.carID })" class="btn btn-outline-dark waves-effect waves-light">Fiyat Listesi</a>
                                    <a href="@Url.Action("Detail", "Car", new { area = "Admin", id = item.carID })" class="btn btn-outline-info waves-effect waves-light">Detaylar</a>
                                    <a href="@Url.Action("Delete", "Car", new { area = "Admin", id = item.carID })" class="btn btn-outline-danger waves-effect waves-light">Sil</a>
                                </td>
                                <td><img src="@item.coverImageUrl" alt="" class="car-image" /></td>
                            </tr>
                        }
                    </tbody>
                </table>

                <a href="@Url.Action("Create", "Car", new { area = "Admin" })" class="btn btn-primary waves-effect waves-light">Yeni Araç Ekle</a>



            </div> <!-- end card body-->
        </div> <!-- end card -->
    </div><!-- end col-->
</div>

@section Scripts {
    <!-- third party js -->
    <script src="~/Admin/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Admin/plugins/datatables/dataTables.bootstrap4.js"></script>
    <script src="~/Admin/plugins/datatables/dataTables.responsive.min.js"></script>
    <script src="~/Admin/plugins/datatables/responsive.bootstrap4.min.js"></script>
    <script src="~/Admin/plugins/datatables/dataTables.buttons.min.js"></script>
    <script src="~/Admin/plugins/datatables/buttons.bootstrap4.min.js"></script>
    <script src="~/Admin/plugins/datatables/buttons.html5.min.js"></script>
    <script src="~/Admin/plugins/datatables/buttons.flash.min.js"></script>
    <script src="~/Admin/plugins/datatables/buttons.print.min.js"></script>
    <script src="~/Admin/plugins/datatables/dataTables.keyTable.min.js"></script>
    <script src="~/Admin/plugins/datatables/dataTables.select.min.js"></script>
    <script src="~/Admin/plugins/datatables/pdfmake.min.js"></script>
    <script src="~/Admin/plugins/datatables/vfs_fonts.js"></script>
    <!-- third party js ends -->
    <!-- Datatables init -->
    <script src="~/Admin/vertical/assets/pages/datatables-demo.js"></script>
}
